<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhotoRevisionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/ivPhotoRevision"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/avatars" />

            <android.widget.Button
                android:id="@+id/btnPhotoRevisionGallery"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="갤러리에서 사진추가"
                android:textColor="@color/md_theme_primary"
                android:stateListAnimator="@null"
                android:background="@drawable/button_stroke"
                />

        </LinearLayout>
        <android.widget.Button
            android:id="@+id/btnPhotoRevisionCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_primary"
            android:background="@drawable/button_stroke_line"
            android:stateListAnimator="@null"
            android:text="사진 촬영"/>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9">

        <Button
            android:id="@+id/btnPhotoRevisionBack"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#9D9D9D"
            android:text="이전"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnPhotoRevisionNext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>